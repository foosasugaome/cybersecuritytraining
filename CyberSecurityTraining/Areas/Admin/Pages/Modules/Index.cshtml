@page
@model CyberSecurityTraining.Areas.Admin.Pages.Modules.IndexModel
@{
    ViewData["Title"] = "Training Modules";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

<div class="breadcrumb">
    <a asp-area="Admin" asp-page="/Dashboard">Dashboard</a> / Training Modules
</div>

<div class="page-title">Training Modules</div>
<div class="page-subtitle">Manage course content and structure</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="section-title">All Modules</div>
    <a asp-area="Admin" asp-page="/Modules/Create" class="btn">
        <i class="fas fa-plus"></i> Add New Module
    </a>
</div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Training Modules</h6>
        </div>
        <div class="card-body">
            @if (Model.Modules.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 80px;">Order</th>
                                <th>Title</th>
                                <th style="width: 100px;">Lessons</th>
                                <th style="width: 100px;">Status</th>
                                <th style="width: 120px;">Created</th>
                                <th style="width: 140px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var module in Model.Modules)
                            {
                                <tr>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">#@module.Order</span>
                                    </td>
                                    <td>
                                        <div class="fw-bold">@module.Title</div>
                                        @if (!string.IsNullOrEmpty(module.Description))
                                        {
                                            <small class="text-muted">@(module.Description.Length > 50 ? module.Description.Substring(0, 50) + "..." : module.Description)</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@module.Lessons.Count</span>
                                    </td>
                                    <td class="text-center">
                                        @if (module.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <small>@module.DateCreated.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group" style="white-space: nowrap;">
                                            <a asp-area="Admin" asp-page="/Modules/Details" asp-route-id="@module.Id" 
                                               class="btn btn-outline-secondary btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Modules/Edit" asp-route-id="@module.Id" 
                                               class="btn btn-outline-secondary btn-sm" title="Edit Module">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Modules/Delete" asp-route-id="@module.Id" 
                                               class="btn btn-outline-secondary btn-sm" title="Delete Module">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No Training Modules Found</h5>
                    <p class="text-muted">Get started by creating your first training module.</p>
                    <a asp-area="Admin" asp-page="/Modules/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Module
                    </a>
                </div>
            }
        </div>
    </div>
</div>
