@page
@model CyberSecurityTraining.Areas.Admin.Pages.Modules.EditModel
@{
    ViewData["Title"] = "Edit Module";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Training Module</h1>
        <div>
            <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Input.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> View Details
            </a>
            <a asp-area="Admin" asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">Edit Module Information</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Input.Title" class="form-label"></label>
                            <input asp-for="Input.Title" class="form-control" placeholder="Enter module title" />
                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Description" class="form-label"></label>
                            <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Enter module description (optional)"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Order" class="form-label"></label>
                                    <input asp-for="Input.Order" class="form-control" type="number" min="1" max="999" />
                                    <small class="form-text text-muted">This determines the order modules appear to users.</small>
                                    <span asp-validation-for="Input.Order" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="Input.IsActive" class="form-check-label">
                                            Module is active and visible to users
                                        </label>
                                    </div>
                                    <span asp-validation-for="Input.IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Module
                            </button>
                            <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Input.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Important</div>
                            <div class="text-gray-600">
                                <ul class="mb-0">
                                    <li>Changing the order will affect how modules appear to users</li>
                                    <li>Deactivating will hide the module from users</li>
                                    <li>Title changes affect all lessons within this module</li>
                                    <li>Users already enrolled will retain access</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Module != null)
            {
                <div class="card border-left-info shadow mt-3">
                    <div class="card-body">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Current Information</div>
                        <div class="text-gray-600">
                            <strong>Created:</strong> @Model.Module.DateCreated.ToString("MMM dd, yyyy")<br>
                            <strong>Lessons:</strong> @Model.Module.Lessons?.Count ?? 0<br>
                            <strong>Current Status:</strong> @(Model.Module.IsActive ? "Active" : "Inactive")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
