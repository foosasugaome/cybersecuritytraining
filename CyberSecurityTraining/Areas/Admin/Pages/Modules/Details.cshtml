@page
@model CyberSecurityTraining.Areas.Admin.Pages.Modules.DetailsModel
@{
    ViewData["Title"] = "Module Details";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="./Index">Training Modules</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Module.Title</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">Module Details</h1>
        </div>
        <div>
            <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Module.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-area="Admin" asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Module Information -->
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Module Information</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Module.Title</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@(Model.Module.Description ?? "No description provided")</dd>

                        <dt class="col-sm-3">Display Order:</dt>
                        <dd class="col-sm-9">@Model.Module.Order</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Module.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.Module.DateCreated.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>

                        <dt class="col-sm-3">Last Modified:</dt>
                        <dd class="col-sm-9">@(Model.Module.DateModified?.ToString("MMMM dd, yyyy 'at' h:mm tt") ?? "Never")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Statistics</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="h4 font-weight-bold text-primary">@Model.Lessons.Count</div>
                            <div class="text-gray-600 small">Lessons</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="h4 font-weight-bold text-info">@Model.TotalQuizzes</div>
                            <div class="text-gray-600 small">Quizzes</div>
                        </div>
                        <div class="col-6">
                            <div class="h4 font-weight-bold text-success">@Model.AssignedUsers</div>
                            <div class="text-gray-600 small">Users Assigned</div>
                        </div>
                        <div class="col-6">
                            <div class="h4 font-weight-bold text-warning">@Model.AssignedGroups</div>
                            <div class="text-gray-600 small">Groups Assigned</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lessons -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Lessons (@Model.Lessons.Count)</h6>
                    <a asp-area="Admin" asp-page="/Lessons/Create" asp-route-moduleId="@Model.Module.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Add Lesson
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Lessons.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Title</th>
                                        <th>Quizzes</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lesson in Model.Lessons)
                                    {
                                        <tr>
                                            <td>@lesson.Order</td>
                                            <td>@lesson.Title</td>
                                            <td>@lesson.Quizzes.Count</td>
                                            <td>
                                                @if (lesson.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>@lesson.DateCreated.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-area="Admin" asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-area="Admin" asp-page="/Lessons/Edit" asp-route-id="@lesson.Id" class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-file-alt fa-3x mb-3"></i>
                            <p>No lessons created for this module yet.</p>
                            <a asp-area="Admin" asp-page="/Lessons/Create" asp-route-moduleId="@Model.Module.Id" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Lesson
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-left-primary shadow">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-2">Quick Actions</div>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-area="Admin" asp-page="/Lessons/Create" asp-route-moduleId="@Model.Module.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Lesson
                        </a>
                        @if (Model.Lessons.Any())
                        {
                            <a asp-area="Admin" asp-page="/Lessons/Index" asp-route-moduleId="@Model.Module.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-list"></i> Manage Lessons
                            </a>
                        }
                        <a asp-area="Admin" asp-page="/Modules/Edit" asp-route-id="@Model.Module.Id" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit Module
                        </a>
                        @if (!Model.Lessons.Any() && Model.AssignedUsers == 0 && Model.AssignedGroups == 0)
                        {
                            <a asp-area="Admin" asp-page="/Modules/Delete" asp-route-id="@Model.Module.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete Module
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
