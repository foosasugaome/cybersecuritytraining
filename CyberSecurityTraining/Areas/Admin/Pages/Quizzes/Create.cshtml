@page "/Quizzes/Create"
@model CyberSecurityTraining.Areas.Admin.Pages.Quizzes.CreateModel
@{
    ViewData["Title"] = "Create Quiz";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Create New Quiz</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Quizzes/Index">Quizzes</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create</li>
                    </ol>
                </nav>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-plus me-2"></i>Quiz Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.Title" class="form-label"></label>
                                            <input asp-for="Input.Title" class="form-control" placeholder="Enter quiz title..." />
                                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.IsActive" class="form-label">Status</label>
                                            <div class="form-check form-switch">
                                                <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                                                <label class="form-check-label" asp-for="Input.IsActive">
                                                    Active Quiz
                                                </label>
                                            </div>
                                            <span asp-validation-for="Input.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Description" class="form-label"></label>
                                    <textarea asp-for="Input.Description" class="form-control" rows="3" 
                                              placeholder="Enter a brief description of this quiz (optional)..."></textarea>
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.LessonId" class="form-label"></label>
                                            <select asp-for="Input.LessonId" asp-items="Model.LessonOptions" class="form-select" id="lessonSelect">
                                                <option value="">-- Select Lesson --</option>
                                            </select>
                                            <span asp-validation-for="Input.LessonId" class="text-danger"></span>
                                            <div class="form-text" id="lessonHelp"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.PassingScore" class="form-label"></label>
                                            <div class="input-group">
                                                <input asp-for="Input.PassingScore" class="form-control" type="number" min="1" max="100" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="Input.PassingScore" class="text-danger"></span>
                                            <div class="form-text">Minimum score required to pass this quiz</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-save me-1"></i>Create Quiz
                                        </button>
                                        <a asp-area="Admin" asp-page="./Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Quiz Guidelines
                            </h5>
                        </div>
                        <div class="card-body">
                            <small class="text-muted">
                                <strong>Quiz Title:</strong><br>
                                Choose a clear, descriptive title that indicates the quiz topic or purpose.<br><br>
                                
                                <strong>Description:</strong><br>
                                Provide optional context about what this quiz covers and its purpose.<br><br>
                                
                                <strong>Lesson Assignment:</strong><br>
                                Select the lesson this quiz belongs to. Only active lessons from active modules are shown.<br><br>
                                
                                <strong>Passing Score:</strong><br>
                                Set the minimum percentage score users need to pass this quiz (typically 70-80%).<br><br>
                                
                                <strong>Status:</strong><br>
                                Inactive quizzes are hidden from users but can be edited by administrators.
                            </small>
                        </div>
                    </div>

                    <div class="card mt-3" id="lessonInfoCard" style="display: none;">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-book me-2"></i>Selected Lesson
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Module:</strong> <span id="moduleTitle">-</span></p>
                            <p><strong>Lesson:</strong> <span id="lessonTitle">-</span></p>
                            <p><strong>Existing Quizzes:</strong> <span id="quizCount">0</span></p>
                            <p class="mb-0"><small class="text-muted">This quiz will be added to the selected lesson.</small></p>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-lightbulb me-2"></i>Next Steps
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="small mb-2">After creating the quiz, you can:</p>
                            <ul class="small mb-0">
                                <li>Add questions and answer options</li>
                                <li>Set question order and types</li>
                                <li>Preview the quiz experience</li>
                                <li>Activate it for users</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Handle lesson selection change
            $('#lessonSelect').change(function() {
                var lessonId = $(this).val();
                if (lessonId) {
                    $.get('@Url.Page("/Quizzes/Create", "LessonInfo")', { lessonId: lessonId })
                        .done(function(data) {
                            $('#moduleTitle').text(data.moduleTitle);
                            $('#lessonTitle').text(data.lessonTitle);
                            $('#quizCount').text(data.quizCount);
                            $('#lessonInfoCard').show();
                            
                            if (!data.isActive) {
                                $('#lessonHelp').html('<span class="text-warning">⚠️ This lesson is inactive</span>');
                            } else {
                                $('#lessonHelp').text('');
                            }
                        })
                        .fail(function() {
                            $('#lessonInfoCard').hide();
                            $('#lessonHelp').text('');
                        });
                } else {
                    $('#lessonInfoCard').hide();
                    $('#lessonHelp').text('');
                }
            });

            // Auto-resize textarea
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });

            // If there's a preselected lesson, trigger the change event
            @if (!string.IsNullOrEmpty(Model.PreselectedLessonId))
            {
                <text>
                $('#lessonSelect').val(@Model.PreselectedLessonId).trigger('change');
                </text>
            }
        });
    </script>
}
