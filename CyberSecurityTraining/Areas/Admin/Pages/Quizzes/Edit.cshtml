@page "/Quizzes/Edit/{id:int}"
@model CyberSecurityTraining.Areas.Admin.Pages.Quizzes.EditModel
@{
    ViewData["Title"] = "Edit Quiz";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Edit Quiz</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Quizzes/Index">Quizzes</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@Model.Input.Id">@Model.Input.Title</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-edit me-2"></i>Quiz Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <input type="hidden" asp-for="Input.Id" />

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.Title" class="form-label"></label>
                                            <input asp-for="Input.Title" class="form-control" placeholder="Enter quiz title..." />
                                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.IsActive" class="form-label">Status</label>
                                            <div class="form-check form-switch">
                                                <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                                                <label class="form-check-label" asp-for="Input.IsActive">
                                                    Active Quiz
                                                </label>
                                            </div>
                                            <span asp-validation-for="Input.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Description" class="form-label"></label>
                                    <textarea asp-for="Input.Description" class="form-control" rows="3" 
                                              placeholder="Enter a brief description of this quiz (optional)..."></textarea>
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.LessonId" class="form-label"></label>
                                            <select asp-for="Input.LessonId" asp-items="Model.LessonOptions" class="form-select" id="lessonSelect">
                                                <option value="">-- Select Lesson --</option>
                                            </select>
                                            <span asp-validation-for="Input.LessonId" class="text-danger"></span>
                                            <div class="form-text" id="lessonHelp"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.PassingScore" class="form-label"></label>
                                            <div class="input-group">
                                                <input asp-for="Input.PassingScore" class="form-control" type="number" min="1" max="100" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="Input.PassingScore" class="text-danger"></span>
                                            <div class="form-text">Minimum score required to pass</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>Update Quiz
                                        </button>
                                        <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Input.Id" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-area="Admin" asp-page="./Delete" asp-route-id="@Model.Input.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Current Quiz Info
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Module:</strong> @Model.ModuleName</p>
                            <p><strong>Lesson:</strong> <span id="currentLesson">@Model.LessonName</span></p>
                            <p><strong>Questions:</strong> @Model.QuestionCount</p>
                            <p class="mb-0"><small class="text-muted">Changing the lesson will move this quiz to a different lesson.</small></p>
                        </div>
                    </div>

                    <div class="card mt-3" id="lessonInfoCard" style="display: none;">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-book me-2"></i>Selected Lesson
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Module:</strong> <span id="moduleTitle">-</span></p>
                            <p><strong>Lesson:</strong> <span id="lessonTitle">-</span></p>
                            <p><strong>Existing Quizzes:</strong> <span id="quizCount">0</span></p>
                            <p class="mb-0"><small class="text-muted">This quiz will be moved to the selected lesson.</small></p>
                        </div>
                    </div>

                    @if (Model.QuestionCount > 0)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-question-circle me-2"></i>Questions
                                </h5>
                            </div>
                            <div class="card-body">
                                <p>This quiz has <strong>@Model.QuestionCount</strong> question(s).</p>
                                <div class="d-grid gap-2">
                                    <a asp-area="Admin" asp-page="/Questions/Create" asp-route-quizId="@Model.Input.Id" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-plus me-1"></i>Add Question
                                    </a>
                                    <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Input.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-list me-1"></i>Manage Questions
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>No Questions
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted">This quiz doesn't have any questions yet.</p>
                                <a asp-area="Admin" asp-page="/Questions/Create" asp-route-quizId="@Model.Input.Id" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus me-1"></i>Add First Question
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Handle lesson selection change
            $('#lessonSelect').change(function() {
                var lessonId = $(this).val();
                var currentLessonId = @Model.Input.LessonId;
                
                if (lessonId && lessonId != currentLessonId) {
                    $.get('@Url.Page("/Quizzes/Edit", "LessonInfo")', { lessonId: lessonId })
                        .done(function(data) {
                            $('#moduleTitle').text(data.moduleTitle);
                            $('#lessonTitle').text(data.lessonTitle);
                            $('#quizCount').text(data.quizCount);
                            $('#lessonInfoCard').show();
                            
                            if (!data.isActive) {
                                $('#lessonHelp').html('<span class="text-warning">⚠️ This lesson is inactive</span>');
                            } else {
                                $('#lessonHelp').text('');
                            }
                        })
                        .fail(function() {
                            $('#lessonInfoCard').hide();
                            $('#lessonHelp').text('');
                        });
                } else {
                    $('#lessonInfoCard').hide();
                    $('#lessonHelp').text('');
                }
            });

            // Auto-resize textarea
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });
    </script>
}
