@page
@model CyberSecurityTraining.Areas.Admin.Pages.Quizzes.IndexModel
@{
    ViewData["Title"] = "Quizzes";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

<div class="breadcrumb">
    <a asp-area="Admin" asp-page="/Dashboard">Dashboard</a> / Quizzes
</div>

<div class="page-title">Quizzes</div>
<div class="page-subtitle">Manage assessments and evaluations</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="section-title">All Quizzes</div>
    <a asp-area="Admin" asp-page="/Quizzes/Create" class="btn">
        <i class="fas fa-plus"></i> Add New Quiz
    </a>
</div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Quizzes</h6>
        </div>
        <div class="card-body">
            @if (Model.Quizzes.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Quiz Title</th>
                                <th style="width: 250px;">Module & Lesson</th>
                                <th style="width: 100px;">Questions</th>
                                <th style="width: 100px;">Pass Score</th>
                                <th style="width: 100px;">Status</th>
                                <th style="width: 120px;">Created</th>
                                <th style="width: 140px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var quiz in Model.Quizzes)
                            {
                                <tr>
                                    <td class="align-top">
                                        <div class="fw-bold" style="color: #333;">@quiz.Title</div>
                                        @if (!string.IsNullOrEmpty(quiz.Description))
                                        {
                                            <small class="text-muted">@(quiz.Description.Length > 60 ? quiz.Description.Substring(0, 60) + "..." : quiz.Description)</small>
                                        }
                                    </td>
                                    <td class="align-top">
                                        <div class="fw-bold text-primary" style="font-size: 0.9em;">@quiz.Lesson.Module.Title</div>
                                        <small class="text-secondary">
                                            <i class="fas fa-file-text"></i> @quiz.Lesson.Title
                                        </small>
                                    </td>
                                    <td class="text-center align-top">
                                        <span class="badge bg-info">@quiz.Questions.Count</span>
                                    </td>
                                    <td class="text-center align-top">
                                        <span class="badge bg-warning text-dark">@quiz.PassingScore%</span>
                                    </td>
                                    <td class="text-center align-top">
                                        @if (quiz.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center align-top">
                                        <small>@quiz.DateCreated.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td class="align-top">
                                        <div class="btn-group" role="group" style="white-space: nowrap;">
                                            <a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@quiz.Id" 
                                               class="btn btn-outline-secondary btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Quizzes/Edit" asp-route-id="@quiz.Id" 
                                               class="btn btn-outline-secondary btn-sm" title="Edit Quiz">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Quizzes/Delete" asp-route-id="@quiz.Id" 
                                               class="btn btn-outline-secondary btn-sm" title="Delete Quiz">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No Quizzes Found</h5>
                    <p class="text-muted">Get started by creating your first quiz.</p>
                    <a asp-area="Admin" asp-page="/Quizzes/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Quiz
                    </a>
                </div>
            }
        </div>
    </div>
</div>
