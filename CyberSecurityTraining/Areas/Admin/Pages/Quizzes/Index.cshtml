@page
@model CyberSecurityTraining.Areas.Admin.Pages.Quizzes.IndexModel
@{
    ViewData["Title"] = "Quizzes";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Quizzes</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">Quizzes</h1>
        </div>
        <a asp-area="Admin" asp-page="/Quizzes/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Quiz
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Quizzes</h6>
        </div>
        <div class="card-body">
            @if (Model.Quizzes.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Module</th>
                                <th>Lesson</th>
                                <th>Quiz Title</th>
                                <th>Questions</th>
                                <th>Passing Score</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var quiz in Model.Quizzes)
                            {
                                <tr>
                                    <td>@quiz.Lesson.Module.Title</td>
                                    <td>@quiz.Lesson.Title</td>
                                    <td>@quiz.Title</td>
                                    <td>@quiz.Questions.Count</td>
                                    <td>@quiz.PassingScore%</td>
                                    <td>
                                        @if (quiz.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@quiz.DateCreated.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@quiz.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-area="Admin" asp-page="/Quizzes/Edit" asp-route-id="@quiz.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-area="Admin" asp-page="/Quizzes/Delete" asp-route-id="@quiz.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No Quizzes Found</h5>
                    <p class="text-muted">Get started by creating your first quiz.</p>
                    <a asp-area="Admin" asp-page="/Quizzes/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Quiz
                    </a>
                </div>
            }
        </div>
    </div>
</div>
