@page "/Quizzes/Delete/{id:int}"
@model CyberSecurityTraining.Areas.Admin.Pages.Quizzes.DeleteModel
@{
    ViewData["Title"] = "Delete Quiz";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Quiz
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Quizzes/Index">Quizzes</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@Model.Quiz.Id">@Model.Quiz.Title</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Delete</li>
                    </ol>
                </nav>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-trash me-2"></i>Confirm Deletion
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning" role="alert">
                                <h6 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Warning: This action cannot be undone!
                                </h6>
                                <p class="mb-0">
                                    You are about to permanently delete this quiz and all its associated data. 
                                    Please review the information below before proceeding.
                                </p>
                            </div>

                            <h6 class="mb-3">Quiz Details:</h6>
                            <dl class="row">
                                <dt class="col-sm-3">Title:</dt>
                                <dd class="col-sm-9">@Model.Quiz.Title</dd>

                                <dt class="col-sm-3">Module:</dt>
                                <dd class="col-sm-9">@Model.ModuleName</dd>

                                <dt class="col-sm-3">Lesson:</dt>
                                <dd class="col-sm-9">@Model.LessonName</dd>

                                <dt class="col-sm-3">Description:</dt>
                                <dd class="col-sm-9">@(Model.Quiz.Description ?? "No description")</dd>

                                <dt class="col-sm-3">Passing Score:</dt>
                                <dd class="col-sm-9">@Model.Quiz.PassingScore%</dd>

                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge @(Model.Quiz.IsActive ? "bg-success" : "bg-warning text-dark")">
                                        @(Model.Quiz.IsActive ? "Active" : "Inactive")
                                    </span>
                                </dd>

                                <dt class="col-sm-3">Created:</dt>
                                <dd class="col-sm-9">@Model.Quiz.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</dd>

                                @if (Model.Quiz.DateModified.HasValue)
                                {
                                    <dt class="col-sm-3">Last Modified:</dt>
                                    <dd class="col-sm-9">@Model.Quiz.DateModified.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</dd>
                                }
                            </dl>

                            @if (Model.HasDependencies)
                            {
                                <div class="alert alert-danger mt-4" role="alert">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-link me-2"></i>Dependencies Found
                                    </h6>
                                    <p>This quiz has the following dependencies that will also be deleted:</p>
                                    <ul class="mb-0">
                                        @foreach (var dependency in Model.Dependencies)
                                        {
                                            <li>@dependency</li>
                                        }
                                    </ul>
                                </div>
                            }

                            <div class="d-flex justify-content-between mt-4">
                                <div>
                                    <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Quiz.Id" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Cancel
                                    </a>
                                    <a asp-area="Admin" asp-page="./Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-list me-1"></i>Back to Quizzes
                                    </a>
                                </div>
                                <form method="post" asp-route-id="@Model.Quiz.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger" id="deleteButton" onclick="return confirmDelete()">
                                        <i class="fas fa-trash me-1"></i>Delete Quiz
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Impact Summary
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h4 class="text-primary">@Model.QuestionCount</h4>
                                        <small class="text-muted">Questions</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-info">@Model.OptionCount</h4>
                                    <small class="text-muted">Answer Options</small>
                                </div>
                            </div>
                            <hr>
                            <div class="text-center">
                                <h4 class="text-warning">@Model.UserAttempts</h4>
                                <small class="text-muted">User Attempts</small>
                            </div>
                            
                            @if (Model.QuestionCount > 0 || Model.UserAttempts > 0)
                            {
                                <hr>
                                <p class="small text-muted mb-0">
                                    <i class="fas fa-exclamation-circle me-1"></i>
                                    All associated data will be permanently deleted.
                                </p>
                            }
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-lightbulb me-2"></i>Alternative Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="small mb-3">Instead of deleting, consider:</p>
                            <div class="d-grid gap-2">
                                <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Quiz.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Edit Quiz
                                </a>
                                @if (Model.Quiz.IsActive)
                                {
                                    <button class="btn btn-outline-warning btn-sm" onclick="markInactive()">
                                        <i class="fas fa-pause me-1"></i>Mark as Inactive
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-success btn-sm" onclick="markActive()">
                                        <i class="fas fa-play me-1"></i>Mark as Active
                                    </button>
                                }
                                @if (Model.QuestionCount == 0)
                                {
                                    <a asp-area="Admin" asp-page="/Questions/Create" asp-route-quizId="@Model.Quiz.Id" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-plus me-1"></i>Add Questions
                                    </a>
                                }
                            </div>
                            <p class="small text-muted mt-2 mb-0">
                                Inactive quizzes are hidden from users but preserve all data.
                            </p>
                        </div>
                    </div>

                    @if (Model.QuestionCount > 0)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-question-circle me-2"></i>Questions to be Deleted
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="small">This quiz contains:</p>
                                <ul class="small mb-0">
                                    <li><strong>@Model.QuestionCount</strong> question(s)</li>
                                    <li><strong>@Model.OptionCount</strong> answer option(s)</li>
                                    @if (Model.UserAttempts > 0)
                                    {
                                        <li><strong>@Model.UserAttempts</strong> user attempt(s)</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you absolutely sure you want to delete this quiz? This action cannot be undone and will permanently remove all associated questions, answer options, and user results.');
        }

        function markInactive() {
            if (confirm('Mark this quiz as inactive? It will be hidden from users but all data will be preserved.')) {
                // You could implement this with an AJAX call to update the quiz status
                alert('This feature would be implemented to toggle quiz status via AJAX.');
            }
        }

        function markActive() {
            if (confirm('Mark this quiz as active? It will be visible to users again.')) {
                // You could implement this with an AJAX call to update the quiz status
                alert('This feature would be implemented to toggle quiz status via AJAX.');
            }
        }

        // Add visual feedback when delete button is clicked
        document.getElementById('deleteButton').addEventListener('click', function(e) {
            if (confirmDelete()) {
                this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Deleting...';
                this.disabled = true;
            } else {
                e.preventDefault();
            }
        });
    </script>
}
