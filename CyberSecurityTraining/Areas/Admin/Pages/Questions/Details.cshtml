@page "/Questions/Details/{id:int}"
@model CyberSecurityTraining.Areas.Admin.Pages.Questions.DetailsModel
@{
    ViewData["Title"] = "Question Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Question Details</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="./Index">Questions</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-question-circle me-2"></i>Question Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Question:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Question.Text)</dd>

                                <dt class="col-sm-3">Order:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Question.Order)</dd>

                                <dt class="col-sm-3">Created:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Question.DateCreated)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-list me-2"></i>Answer Options
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Question.Options?.Any() == true)
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var option in Model.Question.Options.OrderBy(o => o.Order))
                                    {
                                        <div class="list-group-item d-flex align-items-center @(option.IsCorrect ? "list-group-item-success" : "")">
                                            <div class="me-3">
                                                @if (option.IsCorrect)
                                                {
                                                    <i class="fas fa-check-circle text-success fs-5" title="Correct Answer"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-circle text-muted fs-5" title="Incorrect Answer"></i>
                                                }
                                            </div>
                                            <div class="flex-grow-1">
                                                <span class="badge bg-secondary me-2">@option.Order</span>
                                                @option.Text
                                            </div>
                                        </div>
                                    }
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Green items with checkmarks are correct answers.
                                    </small>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    No answer options have been defined for this question.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Question.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-area="Admin" asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-sitemap me-2"></i>Quiz Context
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Module:</strong><br>
                                <a asp-area="Admin" asp-page="/Modules/Details" asp-route-id="@Model.Question.Quiz.Lesson.ModuleId" class="text-decoration-none">
                                    @Model.Question.Quiz.Lesson.Module.Title
                                </a>
                            </p>
                            <p><strong>Lesson:</strong><br>
                                <a asp-area="Admin" asp-page="/Lessons/Details" asp-route-id="@Model.Question.Quiz.LessonId" class="text-decoration-none">
                                    @Model.Question.Quiz.Lesson.Title
                                </a>
                            </p>
                            <p><strong>Quiz:</strong><br>
                                <a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@Model.Question.Quiz.Id" class="text-decoration-none">
                                    @Model.Question.Quiz.Title
                                </a>
                            </p>
                            
                            @if (!Model.Question.Quiz.IsActive)
                            {
                                <div class="alert alert-warning mt-3" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    This quiz is currently inactive.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-bar me-2"></i>Question Statistics
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Answer Options:</strong> @(Model.Question.Options?.Count ?? 0)</p>
                            <p><strong>Correct Answers:</strong> @(Model.Question.Options?.Count(o => o.IsCorrect) ?? 0)</p>
                            <p><strong>Question Type:</strong> 
                                @{
                                    var correctCount = Model.Question.Options?.Count(o => o.IsCorrect) ?? 0;
                                    var totalCount = Model.Question.Options?.Count ?? 0;
                                    string questionType = correctCount switch
                                    {
                                        0 => "No Correct Answer",
                                        1 => "Single Choice",
                                        _ when correctCount > 1 => "Multiple Choice",
                                        _ => "Unknown"
                                    };
                                    
                                    if (totalCount == 2 && correctCount == 1)
                                    {
                                        questionType = "True/False";
                                    }
                                }
                                @questionType
                            </p>
                            
                            @if (correctCount == 0)
                            {
                                <div class="alert alert-danger mt-2" role="alert">
                                    <small><i class="fas fa-exclamation-triangle me-1"></i>No correct answer specified!</small>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-users me-2"></i>Student Responses
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                <small>Student response analytics will be available once learners begin taking this quiz.</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this question?</p>
                <p><strong>Question:</strong> @Model.Question.Text</p>
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. All associated answer options and student responses will also be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-area="Admin" asp-page="./Delete" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Question.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete Question
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
