@page
@model CyberSecurityTraining.Areas.Admin.Pages.Questions.IndexModel
@{
    ViewData["Title"] = "Questions";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Questions</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">Questions</h1>
        </div>
        <a asp-area="Admin" asp-page="./Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Question
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Questions</h6>
        </div>
        <div class="card-body">
            @if (Model.Questions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Question</th>
                                <th>Quiz</th>
                                <th>Lesson</th>
                                <th>Module</th>
                                <th>Order</th>
                                <th>Options</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var question in Model.Questions)
                            {
                                <tr>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@question.Text">
                                            @question.Text
                                        </div>
                                    </td>
                                    <td>@question.Quiz.Title</td>
                                    <td>@question.Quiz.Lesson.Title</td>
                                    <td>@question.Quiz.Lesson.Module.Title</td>
                                    <td>
                                        <span class="badge bg-secondary">#@question.Order</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@question.Options.Count options</span>
                                        @if (question.Options.Any(o => o.IsCorrect))
                                        {
                                            <span class="badge bg-success">@question.Options.Count(o => o.IsCorrect) correct</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-area="Admin" asp-page="./Details" asp-route-id="@question.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="./Edit" asp-route-id="@question.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="./Delete" asp-route-id="@question.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No questions found</h5>
                    <p class="text-muted">Get started by creating your first question.</p>
                    <a asp-area="Admin" asp-page="./Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Question
                    </a>
                </div>
            }
        </div>
    </div>
</div>
