@page
@model CyberSecurityTraining.Areas.Admin.Pages.Questions.IndexModel
@{
    ViewData["Title"] = "Questions";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

<div class="breadcrumb">
    <a asp-area="Admin" asp-page="/Dashboard">Dashboard</a> / Questions
</div>

<div class="page-title">Questions</div>
<div class="page-subtitle">Manage quiz questions and options</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="section-title">All Questions</div>
    <a asp-area="Admin" asp-page="/Questions/Create" class="btn">
        <i class="fas fa-plus"></i> Add New Question
    </a>
</div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Questions</h6>
        </div>
        <div class="card-body">
            @if (Model.Questions.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Order</th>
                                <th style="width: 300px; max-width: 300px;">Question</th>
                                <th style="width: 200px;">Quiz & Module</th>
                                <th style="width: 120px;">Options</th>
                                <th style="width: 140px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var question in Model.Questions)
                            {
                                <tr>
                                    <td class="text-center align-top">
                                        <span class="badge bg-secondary">#@question.Order</span>
                                    </td>
                                    <td class="align-top" style="max-width: 300px; word-wrap: break-word; white-space: normal;">
                                        <div class="fw-bold" style="color: #333; line-height: 1.4;">
                                            @question.Text
                                        </div>
                                    </td>
                                    <td class="align-top">
                                        <div class="fw-bold text-primary" style="font-size: 0.9em;">@question.Quiz.Title</div>
                                        <small class="text-muted">
                                            <i class="fas fa-book"></i> @question.Quiz.Lesson.Module.Title
                                        </small>
                                        <br>
                                        <small class="text-secondary">
                                            <i class="fas fa-file-text"></i> @question.Quiz.Lesson.Title
                                        </small>
                                    </td>
                                    <td class="text-center align-top">
                                        <div>
                                            <span class="badge bg-info">@question.Options.Count</span>
                                        </div>
                                        @if (question.Options.Any(o => o.IsCorrect))
                                        {
                                            <div class="mt-1">
                                                <span class="badge bg-success" style="font-size: 0.7em;">@question.Options.Count(o => o.IsCorrect) correct</span>
                                            </div>
                                        }
                                    </td>
                                    <td class="align-top">
                                        <div class="btn-group" role="group" style="white-space: nowrap;">
                                            <a asp-area="Admin" asp-page="./Details" asp-route-id="@question.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="./Edit" asp-route-id="@question.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="Edit Question">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="./Delete" asp-route-id="@question.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="Delete Question">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No questions found</h5>
                    <p class="text-muted">Get started by creating your first question.</p>
                    <a asp-area="Admin" asp-page="./Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Question
                    </a>
                </div>
            }
        </div>
    </div>
</div>
