@page "/Questions/Delete/{id:int}"
@model CyberSecurityTraining.Areas.Admin.Pages.Questions.DeleteModel
@{
    ViewData["Title"] = "Delete Question";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-danger">Delete Question</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="./Index">Questions</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Question.Id">Details</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Delete</li>
                    </ol>
                </nav>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Warning: Permanent Deletion
                        </h4>
                        <p>You are about to permanently delete this question. This action cannot be undone.</p>
                        <hr>
                        <p class="mb-0">
                            <strong>What will be deleted:</strong>
                        </p>
                        <ul class="mb-0 mt-2">
                            <li>The question and its text</li>
                            <li>All answer options (@Model.Question.Options.Count options)</li>
                            <li>Any student responses to this question</li>
                        </ul>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-question-circle me-2"></i>Question to be Deleted
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Question:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Question.Text)</dd>

                                <dt class="col-sm-3">Quiz:</dt>
                                <dd class="col-sm-9">
                                    @Model.Question.Quiz.Lesson.Module.Title > 
                                    @Model.Question.Quiz.Lesson.Title > 
                                    @Model.Question.Quiz.Title
                                </dd>

                                <dt class="col-sm-3">Order:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Question.Order)</dd>

                                <dt class="col-sm-3">Created:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Question.DateCreated)</dd>

                                <dt class="col-sm-3">Answer Options:</dt>
                                <dd class="col-sm-9">@Model.Question.Options.Count options</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Question.Options?.Any() == true)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-list me-2"></i>Answer Options to be Deleted
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    @foreach (var option in Model.Question.Options.OrderBy(o => o.Order))
                                    {
                                        <div class="list-group-item d-flex align-items-center @(option.IsCorrect ? "list-group-item-success" : "")">
                                            <div class="me-3">
                                                @if (option.IsCorrect)
                                                {
                                                    <i class="fas fa-check-circle text-success fs-5" title="Correct Answer"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-circle text-muted fs-5" title="Incorrect Answer"></i>
                                                }
                                            </div>
                                            <div class="flex-grow-1">
                                                <span class="badge bg-secondary me-2">@option.Order</span>
                                                @option.Text
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <form method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Yes, Delete Question
                            </button>
                            <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Question.Id" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </form>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-sitemap me-2"></i>Question Context
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Module:</strong><br>
                                <a asp-area="Admin" asp-page="/Modules/Details" asp-route-id="@Model.Question.Quiz.Lesson.ModuleId" class="text-decoration-none">
                                    @Model.Question.Quiz.Lesson.Module.Title
                                </a>
                            </p>
                            <p><strong>Lesson:</strong><br>
                                <a asp-area="Admin" asp-page="/Lessons/Details" asp-route-id="@Model.Question.Quiz.LessonId" class="text-decoration-none">
                                    @Model.Question.Quiz.Lesson.Title
                                </a>
                            </p>
                            <p><strong>Quiz:</strong><br>
                                <a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@Model.Question.Quiz.Id" class="text-decoration-none">
                                    @Model.Question.Quiz.Title
                                </a>
                            </p>
                            
                            @if (!Model.Question.Quiz.IsActive)
                            {
                                <div class="alert alert-info mt-3" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    This quiz is currently inactive.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-lightbulb me-2"></i>Alternatives to Deletion
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="small mb-2">Instead of deleting, consider:</p>
                            <ul class="small mb-3">
                                <li><strong>Edit the question:</strong> Fix any issues with the content</li>
                                <li><strong>Deactivate the quiz:</strong> Prevents new student access</li>
                                <li><strong>Archive the quiz:</strong> Keep for historical records</li>
                                <li><strong>Move to different quiz:</strong> Change the quiz assignment</li>
                            </ul>
                            <div class="d-grid gap-2">
                                <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Question.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i>Edit Instead
                                </a>
                                <a asp-area="Admin" asp-page="/Quizzes/Edit" asp-route-id="@Model.Question.Quiz.Id" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-cog me-1"></i>Edit Quiz Settings
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-bar me-2"></i>Impact Analysis
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Question Position:</strong> @Model.Question.Order of @Model.Question.Quiz.Questions.Count</p>
                            <p><strong>Answer Options:</strong> @Model.Question.Options.Count</p>
                            <p><strong>Correct Answers:</strong> @Model.Question.Options.Count(o => o.IsCorrect)</p>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    After deletion, remaining questions will maintain their current order numbers.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
