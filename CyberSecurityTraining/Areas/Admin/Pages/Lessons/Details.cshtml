@page "/Lessons/Details/{id:int}"
@model CyberSecurityTraining.Areas.Admin.Pages.Lessons.DetailsModel
@{
    ViewData["Title"] = "Lesson Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-3">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Lessons/Index">Lessons</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Lesson.Title</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">@Model.Lesson.Title</h1>
                <div>
                    <span class="badge @(Model.Lesson.IsActive ? "bg-success" : "bg-warning text-dark") me-2">
                        @(Model.Lesson.IsActive ? "Active" : "Inactive")
                    </span>
                    <span class="badge bg-info">Order: @Model.Lesson.Order</span>
                </div>
            </div>

            <!-- Navigation Pills -->
            <ul class="nav nav-pills mb-4" id="lessonTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="overview-tab" data-bs-toggle="pill" data-bs-target="#overview" type="button" role="tab">
                        <i class="fas fa-info-circle me-1"></i>Overview
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="content-tab" data-bs-toggle="pill" data-bs-target="#content" type="button" role="tab">
                        <i class="fas fa-file-text me-1"></i>Content
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="quizzes-tab" data-bs-toggle="pill" data-bs-target="#quizzes" type="button" role="tab">
                        <i class="fas fa-question-circle me-1"></i>Quizzes <span class="badge bg-secondary ms-1">@Model.Quizzes.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="progress-tab" data-bs-toggle="pill" data-bs-target="#progress" type="button" role="tab">
                        <i class="fas fa-chart-line me-1"></i>Progress
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="lessonTabsContent">
                <!-- Overview Tab -->
                <div class="tab-pane fade show active" id="overview" role="tabpanel">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Lesson Information</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-3">Module:</dt>
                                        <dd class="col-sm-9">
                                            <a asp-area="Admin" asp-page="/Modules/Details" asp-route-id="@Model.Lesson.ModuleId" class="text-decoration-none">
                                                @Model.Lesson.Module.Title
                                            </a>
                                        </dd>

                                        <dt class="col-sm-3">Order:</dt>
                                        <dd class="col-sm-9">@Model.Lesson.Order</dd>

                                        <dt class="col-sm-3">Status:</dt>
                                        <dd class="col-sm-9">
                                            <span class="badge @(Model.Lesson.IsActive ? "bg-success" : "bg-warning text-dark")">
                                                @(Model.Lesson.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </dd>

                                        <dt class="col-sm-3">Created:</dt>
                                        <dd class="col-sm-9">@Model.Lesson.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</dd>

                                        @if (Model.Lesson.DateModified.HasValue)
                                        {
                                            <dt class="col-sm-3">Last Updated:</dt>
                                            <dd class="col-sm-9">@Model.Lesson.DateModified.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Quick Stats</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-6">
                                            <div class="border-end">
                                                <h4 class="text-primary">@Model.Quizzes.Count</h4>
                                                <small class="text-muted">Quizzes</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <h4 class="text-info">@Model.TotalQuestions</h4>
                                            <small class="text-muted">Questions</small>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        <h4 class="text-success">@Model.UsersWithProgress</h4>
                                        <small class="text-muted">Users with Progress</small>
                                    </div>
                                </div>
                            </div>

                            <div class="card mt-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Lesson.Id" class="btn btn-primary">
                                            <i class="fas fa-edit me-1"></i>Edit Lesson
                                        </a>
                                        <a asp-area="Admin" asp-page="/Quizzes/Create" asp-route-lessonId="@Model.Lesson.Id" class="btn btn-success">
                                            <i class="fas fa-plus me-1"></i>Add Quiz
                                        </a>
                                        <a asp-area="Admin" asp-page="./Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-list me-1"></i>Back to Lessons
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Tab -->
                <div class="tab-pane fade" id="content" role="tabpanel">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Lesson Content</h5>
                            <small class="text-muted">Rendered from Markdown</small>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrWhiteSpace(Model.Lesson.Content))
                            {
                                <div class="lesson-content">
                                    @Html.Raw(Model.RenderedContent)
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-file-text fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No content has been added to this lesson yet.</p>
                                    <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Lesson.Id" class="btn btn-primary">
                                        <i class="fas fa-edit me-1"></i>Add Content
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Quizzes Tab -->
                <div class="tab-pane fade" id="quizzes" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5>Associated Quizzes</h5>
                        <a asp-area="Admin" asp-page="/Quizzes/Create" asp-route-lessonId="@Model.Lesson.Id" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-1"></i>Add Quiz
                        </a>
                    </div>

                    @if (Model.Quizzes.Any())
                    {
                        <div class="row">
                            @foreach (var quiz in Model.Quizzes)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="card-title">@quiz.Title</h6>
                                                    <p class="card-text text-muted small">@(quiz.Description ?? "No description")</p>
                                                </div>
                                                <span class="badge bg-info">@quiz.Questions.Count Q</span>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center mt-2">
                                                <small class="text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>Passing Score: @quiz.PassingScore%
                                                </small>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-area="Admin" asp-page="/Quizzes/Details" asp-route-id="@quiz.Id" class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-area="Admin" asp-page="/Quizzes/Edit" asp-route-id="@quiz.Id" class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No quizzes have been created for this lesson yet.</p>
                            <a asp-area="Admin" asp-page="/Quizzes/Create" asp-route-lessonId="@Model.Lesson.Id" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Create First Quiz
                            </a>
                        </div>
                    }
                </div>

                <!-- Progress Tab -->
                <div class="tab-pane fade" id="progress" role="tabpanel">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Learning Progress</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.UsersWithProgress > 0)
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>@Model.UsersWithProgress</strong> users have started or completed this lesson.
                                </div>
                                <p class="text-muted">Detailed progress tracking will be available in a future update.</p>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No users have started this lesson yet.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.lesson-content {
    line-height: 1.6;
}

.lesson-content h1,
.lesson-content h2,
.lesson-content h3,
.lesson-content h4,
.lesson-content h5,
.lesson-content h6 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    font-weight: 600;
}

.lesson-content p {
    margin-bottom: 1em;
}

.lesson-content pre {
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 0.375rem;
    padding: 1rem;
    overflow-x: auto;
}

.lesson-content code {
    background-color: #f8f9fa;
    color: #e83e8c;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
}

.lesson-content blockquote {
    border-left: 4px solid #007bff;
    padding-left: 1rem;
    margin: 1rem 0;
    color: #6c757d;
    font-style: italic;
}

.lesson-content ul,
.lesson-content ol {
    padding-left: 2rem;
    margin-bottom: 1rem;
}

.lesson-content table {
    width: 100%;
    margin-bottom: 1rem;
    border-collapse: collapse;
}

.lesson-content table th,
.lesson-content table td {
    border: 1px solid #dee2e6;
    padding: 0.5rem;
    text-align: left;
}

.lesson-content table th {
    background-color: #f8f9fa;
    font-weight: 600;
}
</style>
