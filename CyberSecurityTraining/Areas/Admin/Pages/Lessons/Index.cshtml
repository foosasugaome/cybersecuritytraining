@page
@model CyberSecurityTraining.Areas.Admin.Pages.Lessons.IndexModel
@{
    ViewData["Title"] = "Lessons";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

<div class="breadcrumb">
    <a asp-area="Admin" asp-page="/Dashboard">Dashboard</a> / Lessons
</div>

<div class="page-title">Lessons</div>
<div class="page-subtitle">Manage individual learning units</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="section-title">All Lessons</div>
    <a asp-area="Admin" asp-page="/Lessons/Create" class="btn">
        <i class="fas fa-plus"></i> Add New Lesson
    </a>
</div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Lessons</h6>
        </div>
        <div class="card-body">
            @if (Model.Lessons.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Module</th>
                                <th>Order</th>
                                <th>Title</th>
                                <th>Quizzes</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lesson in Model.Lessons)
                            {
                                <tr>
                                    <td>@lesson.Module.Title</td>
                                    <td>@lesson.Order</td>
                                    <td>@lesson.Title</td>
                                    <td>@lesson.Quizzes.Count</td>
                                    <td>
                                        @if (lesson.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@lesson.DateCreated.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-area="Admin" asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-area="Admin" asp-page="/Lessons/Edit" asp-route-id="@lesson.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-area="Admin" asp-page="/Lessons/Delete" asp-route-id="@lesson.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No Lessons Found</h5>
                    <p class="text-muted">Get started by creating your first lesson.</p>
                    <a asp-area="Admin" asp-page="/Lessons/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Lesson
                    </a>
                </div>
            }
        </div>
    </div>
</div>
