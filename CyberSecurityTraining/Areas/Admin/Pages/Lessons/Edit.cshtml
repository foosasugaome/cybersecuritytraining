@page "/Lessons/Edit/{id:int}"
@model CyberSecurityTraining.Areas.Admin.Pages.Lessons.EditModel
@{
    ViewData["Title"] = "Edit Lesson";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Edit Lesson</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Lessons/Index">Lessons</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Lessons/Details" asp-route-id="@Model.Input.Id">@Model.Input.Title</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-edit me-2"></i>Lesson Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <input type="hidden" asp-for="Input.Id" />

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.Title" class="form-label"></label>
                                            <input asp-for="Input.Title" class="form-control" placeholder="Enter lesson title..." />
                                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.IsActive" class="form-label">Status</label>
                                            <div class="form-check form-switch">
                                                <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                                                <label class="form-check-label" asp-for="Input.IsActive">
                                                    Active Lesson
                                                </label>
                                            </div>
                                            <span asp-validation-for="Input.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.ModuleId" class="form-label"></label>
                                            <select asp-for="Input.ModuleId" asp-items="Model.ModuleOptions" class="form-select" id="moduleSelect">
                                                <option value="">-- Select Module --</option>
                                            </select>
                                            <span asp-validation-for="Input.ModuleId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.Order" class="form-label"></label>
                                            <input asp-for="Input.Order" class="form-control" type="number" min="1" max="999" id="orderInput" />
                                            <span asp-validation-for="Input.Order" class="text-danger"></span>
                                            <div class="form-text" id="orderHelp"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Content" class="form-label">
                                        Content <small class="text-muted">(Markdown supported)</small>
                                    </label>
                                    <textarea asp-for="Input.Content" class="form-control" rows="15" 
                                              placeholder="Enter lesson content using Markdown..."></textarea>
                                    <span asp-validation-for="Input.Content" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>Update Lesson
                                        </button>
                                        <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.Input.Id" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-area="Admin" asp-page="./Delete" asp-route-id="@Model.Input.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-lightbulb me-2"></i>Markdown Guide
                            </h5>
                        </div>
                        <div class="card-body">
                            <small class="text-muted">
                                <strong>Headings:</strong><br>
                                # Main Heading<br>
                                ## Sub Heading<br>
                                ### Section<br><br>
                                
                                <strong>Text Formatting:</strong><br>
                                **Bold text**<br>
                                *Italic text*<br>
                                `Code snippet`<br><br>
                                
                                <strong>Lists:</strong><br>
                                - Bullet point<br>
                                1. Numbered item<br><br>
                                
                                <strong>Links:</strong><br>
                                [Link text](URL)<br><br>
                                
                                <strong>Code blocks:</strong><br>
                                ```<br>
                                Code here<br>
                                ```<br><br>
                                
                                <strong>Quotes:</strong><br>
                                > Important note
                            </small>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Current Module
                            </h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Module:</strong> <span id="currentModule">@Model.ModuleName</span></p>
                            <p class="mb-0"><small class="text-muted">Changing the module will affect lesson ordering.</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Handle module selection change
            $('#moduleSelect').change(function() {
                var moduleId = $(this).val();
                if (moduleId) {
                    $.get('@Url.Page("/Lessons/Edit", "ModuleInfo")', { moduleId: moduleId })
                        .done(function(data) {
                            $('#currentModule').text(data.moduleName);
                            $('#orderHelp').text('Suggested order: ' + data.suggestedOrder);
                        })
                        .fail(function() {
                            $('#orderHelp').text('');
                        });
                } else {
                    $('#currentModule').text('No module selected');
                    $('#orderHelp').text('');
                }
            });

            // Auto-resize textarea
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });

            // Initialize current module info
            var currentModuleId = $('#moduleSelect').val();
            if (currentModuleId) {
                $('#moduleSelect').trigger('change');
            }
        });
    </script>
}
