@page
@model CyberSecurityTraining.Areas.Admin.Pages.Lessons.CreateModel
@{
    ViewData["Title"] = "Create Lesson";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="./Index">Lessons</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">Create New Lesson</h1>
        </div>
        <a asp-area="Admin" asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Lessons
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Lesson Information</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Input.Title" class="form-label"></label>
                            <input asp-for="Input.Title" class="form-control" placeholder="Enter lesson title" />
                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.ModuleId" class="form-label"></label>
                                    <select asp-for="Input.ModuleId" asp-items="Model.ModuleSelectList" class="form-select">
                                        <option value="">Select a module...</option>
                                    </select>
                                    <span asp-validation-for="Input.ModuleId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Order" class="form-label"></label>
                                    <input asp-for="Input.Order" class="form-control" type="number" min="1" max="999" />
                                    <small class="form-text text-muted">Order within the module.</small>
                                    <span asp-validation-for="Input.Order" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Content" class="form-label"></label>
                            <textarea asp-for="Input.Content" class="form-control" rows="15" placeholder="Enter lesson content in Markdown format"></textarea>
                            <small class="form-text text-muted">You can use Markdown formatting for rich content.</small>
                            <span asp-validation-for="Input.Content" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.IsActive" class="form-check-label">
                                Lesson is active and visible to users
                            </label>
                            <span asp-validation-for="Input.IsActive" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Lesson
                            </button>
                            <a asp-area="Admin" asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Markdown Guide</div>
                            <div class="text-gray-600 small">
                                <strong>Formatting:</strong><br>
                                <code># Heading 1</code><br>
                                <code>## Heading 2</code><br>
                                <code>**Bold text**</code><br>
                                <code>*Italic text*</code><br>
                                <code>`Code`</code><br>
                                <code>- List item</code><br>
                                <code>[Link](url)</code><br>
                                <code>![Image](url)</code><br><br>
                                
                                <strong>Code blocks:</strong><br>
                                <code>```language<br>code here<br>```</code>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-info-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
