@page
@model CyberSecurityTraining.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Users</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">Users</h1>
        </div>
        <a asp-area="Admin" asp-page="/Users/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New User
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Users</h6>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Company</th>
                                <th>Groups</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@($"{user.FirstName} {user.LastName}")</td>
                                    <td>@user.Email</td>
                                    <td>@(user.Company?.Name ?? "No Company")</td>
                                    <td>
                                        @if (user.GroupMemberships.Any())
                                        {
                                            <span class="text-muted">@string.Join(", ", user.GroupMemberships.Where(m => m.IsActive).Select(m => m.UserGroup.Name))</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Groups</span>
                                        }
                                    </td>
                                    <td>@(user.LastLogin?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                    <td>
                                        <a asp-area="Admin" asp-page="/Users/Details" asp-route-id="@user.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-area="Admin" asp-page="/Users/Edit" asp-route-id="@user.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-area="Admin" asp-page="/Users/Delete" asp-route-id="@user.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No Users Found</h5>
                    <p class="text-muted">Get started by creating your first user.</p>
                    <a asp-area="Admin" asp-page="/Users/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create User
                    </a>
                </div>
            }
        </div>
    </div>
</div>
