@page
@model CyberSecurityTraining.Areas.Admin.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Dashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Users/Index">
                    <i class="fas fa-users"></i> Users
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-trash"></i> Delete User
            </li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Delete User Confirmation
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Model.ErrorMessage
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-warning me-2"></i>
                            Warning: This action cannot be undone!
                        </h5>
                        <p class="mb-0">
                            You are about to permanently delete this user account and all associated data.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>User Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.User.FirstName @Model.User.LastName</dd>
                                
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.User.Email</dd>
                                
                                <dt class="col-sm-4">Company:</dt>
                                <dd class="col-sm-8">@(Model.User.Company?.Name ?? "No Company")</dd>
                                
                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@(Model.User.DateCreated?.ToString("MMM dd, yyyy") ?? "Unknown")</dd>
                                
                                <dt class="col-sm-4">Last Login:</dt>
                                <dd class="col-sm-8">@(Model.User.LastLogin?.ToString("MMM dd, yyyy") ?? "Never")</dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>Group Memberships</h5>
                            @if (Model.GroupMemberships.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var membership in Model.GroupMemberships)
                                    {
                                        <li class="list-group-item px-0">
                                            <strong>@membership.UserGroup.Name</strong>
                                            <br>
                                            <small class="text-muted">@membership.UserGroup.Company.Name</small>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No group memberships</p>
                            }
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h6 class="alert-heading">What will be deleted:</h6>
                        <ul class="mb-0">
                            <li>User account and profile information</li>
                            <li>All group memberships</li>
                            <li>Training progress and completion records</li>
                            <li>Quiz results and answers</li>
                            <li>Module assignments</li>
                            <li>All login and activity history</li>
                        </ul>
                    </div>

                    <form method="post">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-area="Admin" asp-page="/Users/Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <a asp-area="Admin" asp-page="/Users/Details" asp-route-id="@Model.User.Id" class="btn btn-outline-primary me-md-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Are you absolutely sure you want to delete this user account? This action cannot be undone!')">
                                <i class="fas fa-trash"></i> Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
