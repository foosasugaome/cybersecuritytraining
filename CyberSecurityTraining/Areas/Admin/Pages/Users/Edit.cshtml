@page
@model CyberSecurityTraining.Areas.Admin.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Dashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Users/Index">
                    <i class="fas fa-users"></i> Users
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-edit"></i> Edit User
            </li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-edit me-2"></i>
                        Edit User: @Model.User.FirstName @Model.User.LastName
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input asp-for="Input.Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.FirstName" class="form-label"></label>
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.LastName" class="form-label"></label>
                                    <input asp-for="Input.LastName" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.CompanyId" class="form-label"></label>
                            <select asp-for="Input.CompanyId" class="form-select">
                                <option value="">Select Company (Optional)</option>
                                @foreach (var company in Model.Companies)
                                {
                                    <option value="@company.Id">@company.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Input.CompanyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.SelectedGroupIds" class="form-label"></label>
                            <div class="form-check-container" style="max-height: 200px; overflow-y: auto; border: 1px solid #ced4da; border-radius: 0.375rem; padding: 0.75rem;">
                                @if (Model.UserGroups.Any())
                                {
                                    @foreach (var group in Model.UserGroups)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Input.SelectedGroupIds" value="@group.Id" id="group_@group.Id"
                                                   @(Model.Input.SelectedGroupIds.Contains(group.Id) ? "checked" : "")>
                                            <label class="form-check-label" for="group_@group.Id">
                                                @group.Name
                                                <small class="text-muted">(@group.Company.Name)</small>
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">No groups available. <a asp-area="Admin" asp-page="/Groups/Create">Create a group first</a>.</p>
                                }
                            </div>
                            <span asp-validation-for="Input.SelectedGroupIds" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="Input.EmailConfirmed" class="form-check-input" />
                                        <label asp-for="Input.EmailConfirmed" class="form-check-label"></label>
                                    </div>
                                    <span asp-validation-for="Input.EmailConfirmed" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="Input.IsLocked" class="form-check-input" />
                                        <label asp-for="Input.IsLocked" class="form-check-label"></label>
                                    </div>
                                    <span asp-validation-for="Input.IsLocked" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-area="Admin" asp-page="/Users/Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> User Information
                    </h5>
                </div>
                <div class="card-body">
                    <p><strong>User ID:</strong> @Model.User.Id</p>
                    <p><strong>Username:</strong> @Model.User.UserName</p>
                    <p><strong>Created:</strong> @Model.User.DateCreated?.ToString("MMM dd, yyyy")</p>
                    <p><strong>Last Login:</strong> @(Model.User.LastLogin?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</p>
                    <p><strong>Profile Complete:</strong> @(Model.User.IsProfileComplete ? "Yes" : "No")</p>
                    <p><strong>First Login:</strong> @(Model.User.IsFirstLogin ? "Yes" : "No")</p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-key"></i> Password Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">To reset this user's password, use the Identity management tools or send a password reset email.</p>
                    <a href="#" class="btn btn-outline-warning btn-sm" onclick="alert('Password reset functionality can be implemented here')">
                        <i class="fas fa-key"></i> Reset Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
