@page
@model CyberSecurityTraining.Areas.Admin.Pages.Groups.IndexModel
@{
    ViewData["Title"] = "User Groups";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User Groups</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">User Groups</h1>
        </div>
        <a asp-area="Admin" asp-page="/Groups/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Group
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All User Groups</h6>
        </div>
        <div class="card-body">
            @if (Model.UserGroups.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Group Name</th>
                                <th>Company</th>
                                <th>Description</th>
                                <th>Users</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.UserGroups)
                            {
                                <tr>
                                    <td>@group.Name</td>
                                    <td>@group.Company.Name</td>
                                    <td>@(group.Description ?? "No description")</td>
                                    <td>@group.UserMemberships.Count(m => m.IsActive)</td>
                                    <td>@group.DateCreated.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-area="Admin" asp-page="/Groups/Details" asp-route-id="@group.Id" class="btn btn-outline-secondary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Groups/ModuleAssignments" asp-route-id="@group.Id" class="btn btn-outline-success" title="Module Assignments">
                                                <i class="fas fa-book"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Groups/Edit" asp-route-id="@group.Id" class="btn btn-outline-primary" title="Edit Group">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Groups/Delete" asp-route-id="@group.Id" class="btn btn-outline-danger" title="Delete Group">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No User Groups Found</h5>
                    <p class="text-muted">Get started by creating your first user group.</p>
                    <a asp-area="Admin" asp-page="/Groups/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Group
                    </a>
                </div>
            }
        </div>
    </div>
</div>
