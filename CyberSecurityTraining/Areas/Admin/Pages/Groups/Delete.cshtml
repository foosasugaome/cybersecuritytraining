@page
@model CyberSecurityTraining.Areas.Admin.Pages.Groups.DeleteModel
@{
    ViewData["Title"] = "Delete Group";
}

<div class="container-fluid">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Dashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Groups/Index">
                    <i class="fas fa-users"></i> Groups
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-page="/Groups/Details" asp-route-id="@Model.UserGroup.Id">
                    @Model.UserGroup.Name
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-trash"></i> Delete
            </li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Delete Group: @Model.UserGroup.Name
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.HasActiveMembers)
                    {
                        <div class="alert alert-warning" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-exclamation-triangle"></i> Cannot Delete Group
                            </h5>
                            <p class="mb-2">
                                This group has <strong>@Model.ActiveMembersCount active member(s)</strong> and cannot be deleted.
                            </p>
                            <p class="mb-0">
                                Please remove all members from the group before attempting to delete it.
                            </p>
                            <hr>
                            <div class="d-flex justify-content-end">
                                <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.UserGroup.Id" 
                                   class="btn btn-warning">
                                    <i class="fas fa-users"></i> Manage Members
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                            </h5>
                            <p class="mb-2">
                                Are you sure you want to delete this group? This action cannot be undone.
                            </p>
                            <p class="mb-0">
                                <strong>All related data will be permanently removed:</strong>
                            </p>
                            <ul class="mt-2 mb-0">
                                <li>Group information and settings</li>
                                <li>Historical membership records (@Model.TotalMembersCount total)</li>
                                <li>Training module assignments</li>
                                <li>Group-specific progress tracking</li>
                            </ul>
                        </div>

                        <!-- Group Details Summary -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h6>Group Information:</h6>
                                <dl class="row">
                                    <dt class="col-sm-5">Group Name:</dt>
                                    <dd class="col-sm-7">@Model.UserGroup.Name</dd>
                                    
                                    <dt class="col-sm-5">Company:</dt>
                                    <dd class="col-sm-7">@Model.UserGroup.Company?.Name</dd>
                                    
                                    <dt class="col-sm-5">Created:</dt>
                                    <dd class="col-sm-7">@Model.UserGroup.DateCreated.ToString("MMM dd, yyyy")</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <h6>Impact Summary:</h6>
                                <dl class="row">
                                    <dt class="col-sm-6">Active Members:</dt>
                                    <dd class="col-sm-6">
                                        <span class="badge bg-success">@Model.ActiveMembersCount</span>
                                    </dd>
                                    
                                    <dt class="col-sm-6">Total Records:</dt>
                                    <dd class="col-sm-6">
                                        <span class="badge bg-secondary">@Model.TotalMembersCount</span>
                                    </dd>
                                </dl>
                                
                                @if (!string.IsNullOrEmpty(Model.UserGroup.Description))
                                {
                                    <h6>Description:</h6>
                                    <p class="text-muted small">@Model.UserGroup.Description</p>
                                }
                            </div>
                        </div>

                        <!-- Confirmation Form -->
                        <div class="mt-4 pt-3 border-top">
                            <form method="post">
                                <input asp-for="UserGroup.Id" type="hidden" />
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.UserGroup.Id" 
                                       class="btn btn-outline-secondary me-md-2">
                                        <i class="fas fa-arrow-left"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you absolutely sure you want to delete this group? This action cannot be undone!');">
                                        <i class="fas fa-trash"></i> Delete Group Permanently
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alternative Actions -->
    @if (!Model.HasActiveMembers)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-lightbulb"></i> Alternative Actions
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Instead of deleting, you might consider:</p>
                        <div class="btn-group" role="group">
                            <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.UserGroup.Id" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit Group
                            </a>
                            <a asp-area="Admin" asp-page="./Details" asp-route-id="@Model.UserGroup.Id" 
                               class="btn btn-outline-info btn-sm">
                                <i class="fas fa-users"></i> Add Members
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
