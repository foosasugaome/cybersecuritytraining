@page
@model CyberSecurityTraining.Areas.Admin.Pages.Companies.DetailsModel
@{
    ViewData["Title"] = "Company Details";
}

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="breadcrumb">
    <a asp-area="Admin" asp-page="/Dashboard">Dashboard</a> / 
    <a asp-area="Admin" asp-page="/Companies/Index">Companies</a> / @Model.Company.Name
</div>

<div class="page-title">Company Details</div>
<div class="page-subtitle">@Model.Company.Name</div>

<!-- Statistics -->
<div class="stats stats-2">    
    <div class="stat">
        <div class="stat-number">@Model.Users.Count</div>        
        <div class="stat-label">Users</div>
    </div>    
    <div class="stat">
        <div class="stat-number">@Model.UserGroups.Count</div>
        <div class="stat-label">Groups</div>
    </div>
</div>

<div class="d-flex justify-content-end mb-4 gap-2">
    <a asp-area="Admin" asp-page="./Edit" asp-route-id="@Model.Company.Id" class="btn btn-outline-secondary">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a asp-area="Admin" asp-page="./Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <!-- Company Information -->
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary">Company Information</h5>
            </div>
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Company Name</div>
                        <div class="info-value">@Model.Company.Name</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Description</div>
                        <div class="info-value">@(Model.Company.Description ?? "No description provided")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Date Created</div>
                        <div class="info-value">@Model.Company.DateCreated.ToString("MMMM dd, yyyy 'at' h:mm tt")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Users -->
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">Users (@Model.Users.Count)</h5>
                <a asp-area="Admin" asp-page="/Users/Create" asp-route-companyId="@Model.Company.Id" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add User
                </a>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td class="align-top">@($"{user.FirstName} {user.LastName}")</td>
                                        <td class="align-top">@user.Email</td>
                                        <td class="align-top text-center">
                                            <div class="btn-group" style="white-space: nowrap;">
                                                <a asp-area="Admin" asp-page="/Users/Details" asp-route-id="@user.Id" class="btn btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center" style="padding: 4rem 0;">
                        <i class="fas fa-users" style="font-size: 48px; color: var(--text-light); margin-bottom: 1.5rem;"></i>
                        <h3>No Users Found</h3>
                        <p style="color: var(--text-light); margin-bottom: 2rem;">No users have been assigned to this company yet.</p>
                        <a asp-area="Admin" asp-page="/Users/Create" asp-route-companyId="@Model.Company.Id" class="btn">
                            <i class="fas fa-plus"></i> Add First User
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- User Groups -->
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">User Groups (@Model.UserGroups.Count)</h5>
                <a asp-area="Admin" asp-page="/Groups/Create" asp-route-companyId="@Model.Company.Id" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add Group
                </a>
            </div>
            <div class="card-body">
                @if (Model.UserGroups.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model.UserGroups)
                                {
                                    <tr>
                                        <td class="align-top">@group.Name</td>
                                        <td class="align-top">@(group.Description ?? "No description")</td>
                                        <td class="align-top text-center">
                                            <div class="btn-group" style="white-space: nowrap;">
                                                <a asp-area="Admin" asp-page="/Groups/Details" asp-route-id="@group.Id" class="btn btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center" style="padding: 4rem 0;">
                        <i class="fas fa-layer-group" style="font-size: 48px; color: var(--text-light); margin-bottom: 1.5rem;"></i>
                        <h3>No Groups Found</h3>
                        <p style="color: var(--text-light); margin-bottom: 2rem;">No user groups have been created for this company yet.</p>
                        <a asp-area="Admin" asp-page="/Groups/Create" asp-route-companyId="@Model.Company.Id" class="btn">
                            <i class="fas fa-plus"></i> Add First Group
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
