@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div class="jumbotron jumbotron-fluid bg-primary text-white">
        <div class="container">
            <h1 class="display-3">
                <i class="fas fa-shield-alt"></i> CyberSecurity Training Platform
            </h1>
            <p class="lead">Enhance your cybersecurity knowledge and protect your organization from digital threats.</p>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-user-shield fa-3x text-primary mb-3"></i>
                        <h4>Comprehensive Training</h4>
                        <p>Learn from industry experts with hands-on cybersecurity training modules.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                        <h4>Track Progress</h4>
                        <p>Monitor your learning journey with detailed progress tracking and assessments.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-certificate fa-3x text-warning mb-3"></i>
                        <h4>Get Certified</h4>
                        <p>Earn certificates upon completion to showcase your cybersecurity knowledge.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 text-center">
                <h2>Ready to Start Your Cybersecurity Journey?</h2>
                <p class="lead">Contact your administrator to get started with your training modules.</p>
                <a href="/Account/Login" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt"></i> Login to Continue
                </a>
            </div>
        </div>
    </div>
</div>del IndexModel
