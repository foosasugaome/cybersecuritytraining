@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="page-title">
    CyberSecurity Training Platform
</div>
<div class="page-subtitle">
    Enhance your cybersecurity knowledge and protect your organization from digital threats.
</div>

<div class="stats">
    <div class="stat">
        <div class="stat-number">500+</div>
        <div class="stat-label">Training Modules</div>
        <div class="stat-change">+12% this month</div>
    </div>
    <div class="stat">
        <div class="stat-number">10k+</div>
        <div class="stat-label">Active Users</div>
        <div class="stat-change">+8% this month</div>
    </div>
    <div class="stat">
        <div class="stat-number">95%</div>
        <div class="stat-label">Completion Rate</div>
        <div class="stat-change">+3% this month</div>
    </div>
    <div class="stat">
        <div class="stat-number">24/7</div>
        <div class="stat-label">Support Available</div>
        <div class="stat-change">Always online</div>
    </div>
</div>

<div class="content">
    <div>
        <div class="section-title">Why Choose Our Platform</div>
        
        <div class="course-list">
            <div class="course">
                <div class="course-header">
                    <div>
                        <div class="course-title">Comprehensive Training</div>
                        <div class="course-meta">Learn from industry experts</div>
                    </div>
                </div>
                <p>Hands-on cybersecurity training modules covering the latest threats and defense strategies.</p>
            </div>
            
            <div class="course">
                <div class="course-header">
                    <div>
                        <div class="course-title">Progress Tracking</div>
                        <div class="course-meta">Monitor your journey</div>
                    </div>
                </div>
                <p>Detailed progress tracking and assessments to ensure you're mastering the material.</p>
            </div>
            
            <div class="course">
                <div class="course-header">
                    <div>
                        <div class="course-title">Professional Certification</div>
                        <div class="course-meta">Showcase your knowledge</div>
                    </div>
                </div>
                <p>Earn certificates upon completion to demonstrate your cybersecurity expertise.</p>
            </div>
        </div>
        
        <div class="mt-5">
            <a href="/Account/Login" class="btn btn-lg">Get Started Today</a>
        </div>
    </div>
    
    <div class="sidebar">
        <div class="achievement">
            <div class="achievement-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="achievement-title">
                Secure Your Future
            </div>
            <div class="achievement-desc">
                Join thousands of professionals who have enhanced their cybersecurity skills with our comprehensive training platform.
            </div>
            <a href="/Account/Login" class="btn btn-outline">Login to Continue</a>
        </div>
    </div>
</div>
