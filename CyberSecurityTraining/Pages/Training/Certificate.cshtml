@page
@model CyberSecurityTraining.Pages.Training.CertificateModel
@{
    ViewData["Title"] = "Certificate";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-certificate text-warning"></i> Certificate of Completion</h2>
                    <p class="text-muted">@Model.Module.Title</p>
                </div>
                <div>
                    <a asp-page="/Training/Dashboard" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="certificate-preview mb-4">
                        <i class="fas fa-certificate fa-5x text-warning mb-4"></i>
                        
                        <h3 class="mb-3">Certificate of Completion</h3>
                        
                        <p class="lead mb-4">This certifies that</p>
                        
                        <h4 class="text-primary mb-4">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h4>
                        
                        <p class="lead mb-4">has successfully completed the cybersecurity training module</p>
                        
                        <h5 class="text-success mb-4">"@Model.Module.Title"</h5>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Completion Date:</strong></p>
                                <p>@Model.ModuleProgress.CompletedAt?.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Certificate Issued:</strong></p>
                                <p>@Model.ModuleProgress.CertificateIssuedAt?.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Module.Description))
                        {
                            <div class="mb-4">
                                <p class="mb-2"><strong>Module Description:</strong></p>
                                <p class="text-muted">@Model.Module.Description</p>
                            </div>
                        }
                        
                        <div class="mb-4">
                            <p class="text-muted">This certificate validates the successful completion of the cybersecurity training requirements and demonstrates proficiency in the covered topics.</p>
                        </div>
                    </div>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Module.Id" />
                        <button type="submit" asp-page-handler="Download" class="btn btn-primary btn-lg">
                            <i class="fas fa-download"></i> Download Certificate (PDF)
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-info-circle"></i> Certificate Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success"></i> <strong>Authentic:</strong> This certificate is digitally generated and verified</li>
                                <li><i class="fas fa-check text-success"></i> <strong>Secure:</strong> Contains user-specific completion data</li>
                                <li><i class="fas fa-check text-success"></i> <strong>Portable:</strong> PDF format for easy sharing and printing</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-calendar"></i> <strong>Valid From:</strong> @Model.ModuleProgress.CompletedAt?.ToString("MMMM dd, yyyy")</li>
                                <li><i class="fas fa-user"></i> <strong>Issued To:</strong> @Model.CurrentUser.Email</li>
                                <li><i class="fas fa-building"></i> <strong>Organization:</strong> Cybersecurity Training Platform</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .certificate-preview {
        border: 3px solid #f8f9fa;
        border-radius: 10px;
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-body {
        border-radius: 15px;
    }
    
    .btn-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
    }
    
    .text-primary {
        color: #007bff !important;
        font-weight: 600;
    }
    
    .text-success {
        color: #28a745 !important;
        font-weight: 600;
    }
    
    .text-warning {
        color: #ffc107 !important;
    }
</style>
