@page
@model CyberSecurityTraining.Pages.Training.QuizResultModel
@{
    ViewData["Title"] = "Quiz Result";
}

<div class="container-fluid">
    <!-- Result Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-@(Model.QuizResult.Passed ? "success" : "danger") text-white">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-1">
                                <i class="fas fa-@(Model.QuizResult.Passed ? "check-circle" : "times-circle")"></i>
                                Quiz @(Model.QuizResult.Passed ? "Passed" : "Failed")
                            </h3>
                            <p class="mb-0">@Model.Quiz.Title</p>
                        </div>
                        <div class="text-end">
                            <div class="h2 mb-1">@Model.QuizResult.Score%</div>
                            <small>Your Score</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Module:</strong> @Model.Module.Title</p>
                            <p class="mb-1"><strong>Lesson:</strong> @Model.Quiz.Lesson.Title</p>
                            <p class="mb-0"><strong>Completed:</strong> @Model.QuizResult.CompletedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Required Score:</strong> @Model.Quiz.PassingScore%</p>
                            <p class="mb-1"><strong>Questions:</strong> @Model.QuestionReviews.Count</p>
                            <p class="mb-0"><strong>Correct Answers:</strong> @Model.QuestionReviews.Count(r => r.IsCorrect) / @Model.QuestionReviews.Count</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-wrap gap-2 justify-content-center">
                @if (!Model.QuizResult.Passed)
                {
                    <form method="post" asp-page-handler="RetakeQuiz" class="d-inline">
                        <input type="hidden" name="resultId" value="@Model.QuizResult.Id" />
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-redo"></i> Retake Quiz
                        </button>
                    </form>
                }
                <a asp-page="/Training/TakeModule" asp-route-id="@Model.Module.Id" class="btn btn-primary btn-lg">
                    <i class="fas fa-book-open"></i> Continue Learning
                </a>
                <a asp-page="/Training/Dashboard" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-tachometer-alt"></i> Training Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Question Review -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-clipboard-list"></i> Question Review</h5>
                </div>
                <div class="card-body">
                    @if (Model.QuestionReviews.Any())
                    {
                        @for (int i = 0; i < Model.QuestionReviews.Count; i++)
                        {
                            var review = Model.QuestionReviews[i];
                            
                            <div class="question-review mb-4 @(i < Model.QuestionReviews.Count - 1 ? "border-bottom pb-4" : "")">
                                <div class="d-flex align-items-start mb-3">
                                    <div class="me-3">
                                        <span class="badge bg-@(review.IsCorrect ? "success" : "danger") fs-6">
                                            <i class="fas fa-@(review.IsCorrect ? "check" : "times")"></i>
                                            @(i + 1)
                                        </span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-3">@review.Question.Text</h6>
                                        
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <h6 class="text-muted mb-2">Answer Options:</h6>
                                                @foreach (var option in review.Options)
                                                {
                                                    <div class="mb-2">
                                                        <div class="d-flex align-items-center">
                                                            @if (option.IsCorrect)
                                                            {
                                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                                <span class="fw-bold text-success">@option.Text</span>
                                                                <span class="badge bg-success ms-2">Correct</span>
                                                            }
                                                            else if (review.SelectedOption != null && option.Id == review.SelectedOption.Id)
                                                            {
                                                                <i class="fas fa-times-circle text-danger me-2"></i>
                                                                <span class="fw-bold text-danger">@option.Text</span>
                                                                <span class="badge bg-danger ms-2">Your Answer</span>
                                                            }
                                                            else
                                                            {
                                                                <i class="far fa-circle text-muted me-2"></i>
                                                                <span class="text-muted">@option.Text</span>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="bg-light p-3 rounded">
                                                    <h6 class="text-muted mb-2">Result:</h6>
                                                    @if (review.IsCorrect)
                                                    {
                                                        <div class="text-success">
                                                            <i class="fas fa-check-circle me-2"></i>
                                                            <strong>Correct!</strong>
                                                            <p class="mb-0 mt-1 small">You selected the right answer.</p>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="text-danger">
                                                            <i class="fas fa-times-circle me-2"></i>
                                                            <strong>Incorrect</strong>
                                                            @if (review.SelectedOption != null)
                                                            {
                                                                <p class="mb-1 mt-1 small">You selected: <strong>@review.SelectedOption.Text</strong></p>
                                                            }
                                                            else
                                                            {
                                                                <p class="mb-1 mt-1 small">No answer was selected.</p>
                                                            }
                                                            @if (review.CorrectOption != null)
                                                            {
                                                                <p class="mb-0 small">Correct answer: <strong class="text-success">@review.CorrectOption.Text</strong></p>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                            <h4>No Questions to Review</h4>
                            <p class="text-muted">This quiz doesn't have any questions.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Performance Summary -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-pie"></i> Performance Summary</h6>
                </div>
                <div class="card-body">
                    @{
                        var correctCount = Model.QuestionReviews.Count(r => r.IsCorrect);
                        var totalCount = Model.QuestionReviews.Count;
                        var incorrectCount = totalCount - correctCount;
                        var correctPercentage = totalCount > 0 ? (correctCount * 100.0 / totalCount) : 0;
                        var incorrectPercentage = totalCount > 0 ? (incorrectCount * 100.0 / totalCount) : 0;
                    }
                    
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="text-success">
                                <i class="fas fa-check-circle fa-2x"></i>
                                <h4 class="mt-2">@correctCount</h4>
                                <small>Correct</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-danger">
                                <i class="fas fa-times-circle fa-2x"></i>
                                <h4 class="mt-2">@incorrectCount</h4>
                                <small>Incorrect</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-primary">
                                <i class="fas fa-percentage fa-2x"></i>
                                <h4 class="mt-2">@Model.QuizResult.Score%</h4>
                                <small>Final Score</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" style="width: @correctPercentage%">
                                @if (correctPercentage > 15) { <span>@correctCount Correct</span> }
                            </div>
                            <div class="progress-bar bg-danger" style="width: @incorrectPercentage%">
                                @if (incorrectPercentage > 15) { <span>@incorrectCount Wrong</span> }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-info-circle"></i> Next Steps</h6>
                </div>
                <div class="card-body">
                    @if (Model.QuizResult.Passed)
                    {
                        <div class="text-success mb-3">
                            <i class="fas fa-trophy fa-2x"></i>
                            <h5 class="mt-2">Congratulations!</h5>
                            <p class="mb-0">You've successfully passed this quiz.</p>
                        </div>
                        <div class="d-grid">
                            <a asp-page="/Training/TakeModule" asp-route-id="@Model.Module.Id" class="btn btn-success">
                                <i class="fas fa-forward"></i> Continue to Next Lesson
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-warning mb-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                            <h5 class="mt-2">Keep Learning!</h5>
                            <p class="mb-0">Review the material and try again to improve your score.</p>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-page="/Training/TakeModule" asp-route-id="@Model.Module.Id" class="btn btn-primary">
                                <i class="fas fa-book"></i> Review Lesson Content
                            </a>
                            <form method="post" asp-page-handler="RetakeQuiz" class="d-inline">
                                <input type="hidden" name="resultId" value="@Model.QuizResult.Id" />
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="fas fa-redo"></i> Retake Quiz
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.question-review {
    position: relative;
}

.question-review .badge {
    min-width: 2.5rem;
    min-height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.progress-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
}

.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.bg-light {
    background-color: #f8f9fa !important;
}
</style>
