<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberSecurity Training</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/ultra-minimalist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">CyberSec Training</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="user-menu">
                    <div class="user-menu-dropdown">
                        <div class="user-info">
                            <div class="user-name">@User.Identity.Name</div>
                            <div class="user-role">@(User.IsInRole("Admin") ? "Administrator" : "User")</div>
                        </div>
                        <div class="user-avatar">
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        </div>
                        <i class="fas fa-chevron-down" style="font-size: 10px; color: var(--text-light); margin-left: 0.5rem;"></i>
                        <div class="user-dropdown">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-area="Admin" asp-page="/Dashboard">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Training/Dashboard">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                                <a asp-page="/Training/MyProgress">
                                    <i class="fas fa-chart-line"></i> Progress
                                </a>
                            }
                            <div class="divider"></div>
                            <a asp-page="/Account/Profile">
                                <i class="fas fa-user"></i> Profile
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="divider"></div>
                                <a asp-area="Admin" asp-page="/Companies/Index">
                                    <i class="fas fa-building"></i> Companies
                                </a>
                                <a asp-area="Admin" asp-page="/Users/Index">
                                    <i class="fas fa-users"></i> Users
                                </a>
                                <a asp-area="Admin" asp-page="/Groups/Index">
                                    <i class="fas fa-layer-group"></i> Groups
                                </a>
                                <div class="divider"></div>
                                <a asp-area="Admin" asp-page="/Modules/Index">
                                    <i class="fas fa-book"></i> Modules
                                </a>
                                <a asp-area="Admin" asp-page="/Lessons/Index">
                                    <i class="fas fa-file-alt"></i> Lessons
                                </a>
                                <a asp-area="Admin" asp-page="/Quizzes/Index">
                                    <i class="fas fa-question-circle"></i> Quizzes
                                </a>
                                <a asp-area="Admin" asp-page="/Questions/Index">
                                    <i class="fas fa-list-ol"></i> Questions
                                </a>
                                <div class="divider"></div>
                                <a asp-area="Admin" asp-page="/SystemAdmin/DatabaseManager">
                                    <i class="fas fa-database"></i> Database Management
                                </a>
                            }
                            <div class="divider"></div>
                            <form method="post" asp-page="/Account/Logout" style="margin: 0;">
                                <button type="submit">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <nav class="nav">
                    <a href="#features">Features</a>
                    <a href="#about">About</a>
                    <a href="#contact">Contact</a>
                </nav>
                <div class="user-menu">
                    <a asp-page="/Account/Login" class="btn btn-outline">Login</a>
                </div>
            }
        </div>
    </header>
    <main class="main">
        @RenderBody()
    </main>

    <!-- Simple scripts - no Bootstrap required for ultra-minimalist design -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
