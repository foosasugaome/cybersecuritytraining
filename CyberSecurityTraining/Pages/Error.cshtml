@page "/Error/{statusCode:int?}"
@model ErrorModel
@{
    var statusCode = Model.ErrorStatusCode ?? 500;
    var errorTitle = statusCode switch
    {
        404 => "Page Not Found",
        403 => "Access Forbidden",
        500 => "Internal Server Error",
        _ => "Error"
    };
    ViewData["Title"] = errorTitle;
}

@if (statusCode == 404)
{
    <!-- Redirect to custom 404 page -->
    <script>
        window.location.href = '/Error404';
    </script>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="error-template">
                    <div class="error-details">
                        <div class="error-number">
                            <span class="display-1 text-danger">@statusCode</span>
                        </div>
                        <h2 class="mt-4 mb-3">@errorTitle</h2>
                        
                        @if (statusCode == 403)
                        {
                            <p class="lead text-muted mb-4">
                                You don't have permission to access this resource. Please contact your administrator if you believe this is an error.
                            </p>
                        }
                        else if (statusCode == 500)
                        {
                            <p class="lead text-muted mb-4">
                                Something went wrong on our end. Our technical team has been notified and is working to fix the issue.
                            </p>
                        }
                        else
                        {
                            <p class="lead text-muted mb-4">
                                An unexpected error occurred while processing your request.
                            </p>
                        }
                    </div>
                    
                    <div class="error-actions mb-5">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-area="Admin" asp-page="/Dashboard" class="btn btn-primary btn-lg">
                                            <i class="fas fa-tachometer-alt me-2"></i>
                                            Go to Admin Dashboard
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-page="/Training/Dashboard" class="btn btn-primary btn-lg">
                                            <i class="fas fa-graduation-cap me-2"></i>
                                            Go to Training Dashboard
                                        </a>
                                    }
                                }
                                else
                                {
                                    <a asp-page="/Index" class="btn btn-primary btn-lg">
                                        <i class="fas fa-home me-2"></i>
                                        Go to Home Page
                                    </a>
                                }
                            </div>
                            <div class="col-md-6 mb-3">
                                <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Go Back
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <style>
    .error-template {
        padding: 40px 15px;
    }

    .error-number {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .error-details h2 {
        color: #333;
        font-weight: 600;
    }

    .error-actions .btn {
        margin: 5px;
    }
    </style>
}